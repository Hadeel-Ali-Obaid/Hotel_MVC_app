@model Hotel_Reservation.Models.UserLogin

@{
    ViewData["Title"] = "Login";
}
<head>
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/sign_assets3/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/sign_assets3/css/style.css">
</head>
<body>
    @*from template*@
    <div class="container-xxl py-5 bg-dark hero-header mb-5">
        <div class="container text-center my-5 pt-5 pb-4">
            <h1 class="display-3 text-white mb-3 animated slideInDown">LogIn</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase" style="background-color:unset !important;">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Register">Register</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">LogIn</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Sign in form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">LogIn</h2>
                    <form method="POST" class="login-form" id="login-form" asp-action="Login">
                        <div class="form-group">
                            <input asp-for="Username" class="form-control" placeholder="First name" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Last name" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Create" />
                        </div>
                    </form>
                    <div class="social-login" hidden>
                        <span class="social-label">Or login with</span>
                        <ul class="socials">
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="signup-image">
                    <figure><img src="~/sign_assets3/images/signin-image.jpg" alt="sing in image"></figure>
                    <a asp-action="Register" class="signup-image-link">Create an account</a>
                </div>
            </div>
        </div>
    </section>
    <!-- JS -->
    <script src="~/sign_assets3/vendor/jquery/jquery.min.js"></script>
    <script src="~/sign_assets3/js/main.js"></script>
</body>




@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}