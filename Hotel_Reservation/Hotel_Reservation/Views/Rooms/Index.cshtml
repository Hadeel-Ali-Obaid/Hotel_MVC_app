@model IEnumerable<Hotel_Reservation.Models.Room>

<h2>Rooms</h2>

<!-- Team Start -->
<div class="container-xxl pt-5 pb-3">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Cities</h5>
            <h1 class="mb-5">Cities We Cover</h1>
        </div>
        <div class="container">
            <div class="row row-cols-1 row-cols-md-3 g-3">
                @foreach (var room in Model)
                {
                    <div class="col d-flex">
                        <div class="card d-flex flex-column">
                             <a asp-controller="Rooms" asp-action="BookRoom" asp-route-roomId="@room.Id">
                            <img src="@Url.Content("~/NewFolder/" + room.ImagePath)" class="card-img-top" alt="...">
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h3 class="card-text">@room.RoomName</h3>
                                <small class="mt-auto">Number of Beds: @room.NumberOfBeds</small>
                                <small class="mt-auto">Price: @room.Price</small>
                                <small class="mt-auto"> Status: @room.Status</small> <!-- Pushes the small text to the bottom -->
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Team End -->