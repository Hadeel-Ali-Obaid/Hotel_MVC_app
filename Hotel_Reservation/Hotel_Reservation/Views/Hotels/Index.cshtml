@model Hotel_Reservation.Models.HotelFilterViewModel
@{
    ViewData["Title"] = "Index";
}
@{
    var selectedCityId = Model.SelectedCityId;  // Fetch the selected city ID
}

<head>
    <meta charset="utf-8">
    <title>CaterServ - Catering Services Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="author" content="colorlib.com">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700" rel="stylesheet" />
    <link href="~/Hotel_Filter/css/main.css" rel="stylesheet" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Playball&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/NewFolder1/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/NewFolder1/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/NewFolder1/lib/owlcarousel/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/NewFolder1/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/NewFolder1/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="s010">
        <form method="get">
            <div class="inner-form">
                <div class="basic-search">
                    <div class="input-field">
                        <!-- Search by Hotel Name -->
                        <input id="search" type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by Hotel Name" />
                        <div class="icon-wrap">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="advance-search">
                    <span class="desc">ADVANCED SEARCH</span>
                    <div class="row">
                        <div class="input-field">
                            <div class="input-select">
                                <select name="selectedCityId">
                                    <option value="">Select City</option>
                                    @foreach (var city in Model.Cities)
                                    {
                                        @Html.Raw("<option value='" + city.Value + "'" + (city.Value.ToString() == selectedCityId.ToString() ? " selected='selected'" : "") + ">" + city.Text + "</option>")
                                    }
                                </select>
                        </div>
                    </div>
                    <div class="input-field">
                        <div class="input-select">
                             <select data-trigger="" name="selectedRate">
                                <option value="">Select Rate</option>
                                   @foreach (var rate in Model.Rates)
                                   {
                                        @Html.Raw("<option value='" + rate.Value + "'" + (rate.Value.ToString() == Model.SelectedRate.ToString() ? " selected='selected'" : "") + ">" + rate.Text + "</option>")
                                   }
                             </select>
                        </div>
                    </div>
                        <div class="input-field">
                         <div class="input-select">
                                        <select data-trigger="" name="selectedRoomPrice">
                                            <option value="">Select Room Price</option>
                                            @foreach (var roomPrice in Model.RoomPrices)
                                            {
                                                @Html.Raw("<option value='" + roomPrice.Value + "'" + (roomPrice.Value.ToString() == Model.SelectedRoomPrice.ToString() ? " selected='selected'" : "") + ">" + roomPrice.Text + "</option>")
                                            }
                                        </select>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                <div class="row third">
                    <div class="input-field">
                        <div class="result-count">
                            <span>@Model.Hotels.Count()</span> results
                        </div>
                        <div class="group-btn">
                            <button type="submit" class="btn-search">SEARCH</button>
                        </div>
                    </div>
                </div>
    </form>
</div>

<div class="container-fluid py-6">
    <div class="container">
            @foreach (var item in Model.Hotels)
            {
                <div class="row g-5 align-items-center">
                    <div class="col-lg-5 wow bounceInUp" data-wow-delay="0.1s">
                        <!-- Link the image to the RoomsController's Index action, passing the HotelId -->
                        <a href="@Url.Action("Index", "Rooms", new { hotelId = item.Id })">
                            <img src="@Url.Content("~/NewFolder/" + item.ImagePath)" alt="Image" class="img-fluid rounded" />
                        </a>
                    </div>
                    <div class="col-lg-7 wow bounceInUp" data-wow-delay="0.3s">
                        <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">About Us</small>
                        <h1 class="display-5 mb-4">@item.HotelName</h1>
                        <p class="mb-4">
                            @item.Discription
                        </p>
                        <div class="row g-4 text-dark mb-5">
                            <div class="col-sm-6">
                                <i class="fas fa-share text-primary me-2"></i> @item.City?.CityName
                            </div>
                        </div>
                        <!-- Optional: Button to view rooms for the selected hotel -->
                        <a href="@Url.Action("Index", "Rooms", new { hotelId = item.Id })" class="btn btn-primary py-3 px-5 rounded-pill">View Rooms<i class="fas fa-arrow-right ps-2"></i></a>
                    </div>
                </div>
            }
    </div>
</div>
</body>
